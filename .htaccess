<IfModule mod_rewrite.c>
    # Enable rewrite engine
    RewriteEngine On

    # Set site URL base
    RewriteBase /~siw29/trabajofinal/

    # Hide unwanted files
    RewriteRule ^(.gitignore|README.md)$ . [L,R=301]

    # Hide unwanted folders
    RewriteRule ^(.git|app|config|util) . [L,R=301]

    # Do not rewrite urls for files or folders
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Rewrite all others requests
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]
</IfModule>

RedirectMatch "^/~siw29/trabajofinal/$" "/~siw29/trabajofinal/blog/"
